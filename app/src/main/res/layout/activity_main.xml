<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f3f5"
        android:textColor="#000000"
        android:textSize="24sp"
        android:gravity="end"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="50sp"
        android:background="#f2f3f5"
        android:textColor="#000000"
        android:gravity="end"
        android:textIsSelectable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/AC"
            android:textSize="20sp"
            style="?android:attr/buttonBarStyle"
            android:textColor="@color/colorOrange"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/symbol"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"
            android:textColor="@color/colorOrange"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/percent"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"
            android:textColor="@color/colorOrange"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/division"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"
            android:textColor="@color/colorOrange"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_7"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_8"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button31"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_9"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button41"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/mult"
            android:textSize="24sp"
            android:textColor="@color/colorOrange"
            style="?android:attr/buttonBarStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_4"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_5"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button32"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_6"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button42"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/subtract"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"
            android:textColor="@color/colorOrange"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_1"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_2"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button33"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_3"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button43"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/add"
            android:textSize="24sp"
            android:textColor="@color/colorOrange"
            style="?android:attr/buttonBarStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/No_0"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button24"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_select"
            android:layout_weight="1"
            android:text="@string/dot"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/button34"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="?android:attr/buttonBarStyle"
            android:background="@drawable/button_clear"
            android:layout_weight="1"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/button44"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/equal"
            android:textSize="24sp"
            style="?android:attr/buttonBarStyle"
            android:background="@color/colorOrange"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>